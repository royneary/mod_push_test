<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue_grey_700"
    android:orientation="vertical" tools:context=".MainActivity">

    <TextView android:text="GCM registration token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informationHeadlineTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informationTextView"
        android:layout_below="@+id/informationHeadlineTextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:text="Last notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationHeadlineTextView"
        android:layout_below="@+id/informationTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
   
    <TextView android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationTextView"
        android:layout_below="@+id/notificationHeadlineTextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
